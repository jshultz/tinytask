<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @project.name %>
</p>

<p>
  <b>Title:</b>
  <%= @project.title %>
</p>

<p>
  <b>Details:</b>
  <%= @project.details %>
</p>

<h2>Tasks</h2>
<% @project.tasks.each do |task| %>
    <p><strong>Task Name:</strong>
    <%= task.name %>
    </p>

    <p>
      <strong>Details</strong>
      <%= task.details %>
    </p>
    <% end %>

<h2>Ass a task:</h2>
<%= form_for([@project, @project.tasks.build]) do |f| %>

    <div class="field">
      <%= f.label :name %><Br/>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :details %><br/>
      <%= f.text_area :details %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>


<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Back', projects_path %>
